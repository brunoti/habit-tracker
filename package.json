{
  "name": "habit-tracker-dingle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate:sqlite --config=drizzle.config.js",
    "db:push": "drizzle-kit push:sqlite --config=drizzle.config.js",
    "db:check": "drizzle-kit check:sqlite --config=drizzle.config.js",
    "db:studio": "drizzle-kit studio --config=drizzle.config.js --verbose",
    "db:migrate": "pnpm db:generate && pnpm db:push"
  },
  "devDependencies": {
    "@excelsia/prettier-config": "^1.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.0.0"
  },
  "type": "module",
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "@libsql/client": "^0.4.0-pre.7",
    "@paralleldrive/cuid2": "^2.2.2",
    "cva": "^0.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "hono": "^3.12.2",
    "zod": "^3.22.4"
  }
}
